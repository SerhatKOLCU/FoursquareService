@{
    ViewBag.Title = "Home Page";
}
<div class="page-header">
    <h1>BookService</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">App Init</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" action="http://localhost:26255/api/init" method="post" name="initForm">
                    <div class="form-group">
                        <label for="deviceId" class="col-sm-2 control-label">Device Id</label>
                        <div class="col-sm-10">
                            <input type="number" name="deviceId" id="devId" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="appVersion" class="col-sm-2 control-label">Application Version</label>
                        <div class="col-sm-10">
                            <input type="text" name="appVersion" id="appVer" placeholder="1.1.3" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="transacctionMode" class="col-sm-2 control-label">Transaction Mode</label>
                        <span>Test - 1, Production - 2</span>
                        <div class="col-sm-10">
                            <input type="number" name="transactionMode" id="tMode" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default" onclick="appInit()">Init</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Books</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: initDTO">
                    <li>
                        <strong><span data-bind="text: AuthorName"></span></strong>: <span data-bind="text: Title"></span>
                        <!-- New code -->
                        <small><a href="#" data-bind="click: $parent.getBookDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Author</td><td data-bind="text: detail().AuthorName"></td></tr>
                <tr><td>Title</td><td data-bind="text: detail().Title"></td></tr>
                <tr><td>Year</td><td data-bind="text: detail().Year"></td></tr>
                <tr><td>Genre</td><td data-bind="text: detail().Genre"></td></tr>
                <tr><td>Price</td><td data-bind="text: detail().Price"></td></tr>
            </table>
        </div>
    </div>

    <!-- /ko -->




</div>


<script type="text/javascript">

    function appInit() {
        alert("Sending JSON");
        var xhr = new XMLHttpRequest();
        xhr.open(form.method, form.action, true);
        xhr.setRequestHeader('Content-Type', 'application/json: charset=UTF-8');
        var initData = {
            "appVersion": document.getElementById('appVer').value,
            "transactionMode": document.getElementById('tMode').value
        };
        xhr.send(JSON.stringify(initData));
    }
    
</script>